# VOWEL COUNTER --->>>

print("VOWEL COUNTER")

while True:
    text = input("\nEnter some text (or 'quit')--> ")

    if text == "q":
        print("ğŸ‘‹ğŸ¾ Goodbyr!")
        break

    vowel_count = 0

    for letter in text :
        if letter in ["a","e","i","o","u","A","E","I","O","U"]:
            vowel_count += 1 

    print(f"that text has {vowel_count} vowels!")

