# WORD SCRAMBLER ---->>>

import random

print("ğŸ”¤ WORD SCRAMBLER ğŸ”¤")

while True:
    word = input("\nEnter a word to scramble (or 'quit')--> ")
    if word.lower() == "quit":
        print("ğŸ‘‹ğŸ¾ Goodbye!")
        break

    latters = list(word)
    random.shuffle(latters)
    print(f"Scramblied: {"".join(latters)}")
