# WORD SCRAMBLER ---->>>

import random

print("🔤 WORD SCRAMBLER 🔤")

while True:
    word = input("\nEnter a word to scramble (or 'quit')--> ")
    if word.lower() == "quit":
        print("👋🏾 Goodbye!")
        break

    latters = list(word)
    random.shuffle(latters)
    print(f"Scramblied: {"".join(latters)}")
