# CHECK CHARACTER TYPE---->>>

print("ğŸ“ CHARECTER TYPE CHECKER ğŸ“")
char = input("Enter a single character: ")

if char.isalpha() :
    print(f"This is a letter. ---> ({char})")

elif char.isdigit():
    print(f"This is a digit. ---> ({char})")

else:
    print(f"Invalid, Please Enter (latter, digit).--> {char}")

