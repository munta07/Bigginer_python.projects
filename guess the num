# -------------------GUESS THE NUMBER----------------------GAME
import random

num1=1
num2=10

random_num=random.randint(num1,num2)

times = 0
print("â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
print("â•‘      GUESS THE NUMBER GAME    â•‘")
print("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")

while True:
    user_input = int(input(f"ğŸ¯ Enter Your guess between ({num1} and {num2}): "))

    if user_input == random_num :
        print("â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—")
        print("â•‘       ğŸ‰ YOU GOT IT! ğŸ‰      â•‘")
        print(f"â•‘   The number was: {random_num}   â•‘")
        print("â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•")
        break

    elif user_input > random_num :
        print("ğŸ“‰ Too high! Aim lower!")
        times+=1

    elif user_input < random_num :
        print("ğŸ“ˆ Too low! Aim higher!")
        times+=1

print(f"ğŸ¯ You nailed it in {times} tries! The number was {random_num}. ğŸ‰")
