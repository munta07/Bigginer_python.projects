# COIN FLIP GAME --->>>

import random

print("ğŸ® COIN FLIP GAME ğŸ®")
print("Guess heads or tails")

while True:
    guess = input("\nEnter your guess (heads/tails): ").lower()
    coin = ["heads","tails"]
    if guess != "heads" and guess != "tails":
        print("âŒ Please enter 'heads' or 'tails' âŒ")
        continue

    flip = random.choice(coin)

    print(f"\nCoin shows {flip}")

    if guess == flip:
        print("You won! You guesses correctly.")
    else:
        print("Sorry, Wrong guess. Try again!")

    again = input("\nğŸ” Play again? (yes/no)--> ").lower()
    if again == "no":
        print("ğŸ‘‹ğŸ¾ GOODBYE!")
        break
