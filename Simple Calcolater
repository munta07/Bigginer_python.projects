print("â•‘  Available Operators âœ    +  (add),  -  (subtract),  *  (multiply),  /  (divide)")
op=input("â•‘  Choose an operator âœ  + , - , * , /  : ")
num1 = float(input("Type the first number: "))
num2 = float(input("Type the second number: "))
if op == "+":
    print(f"{num1} + {num2}")
    print(f"Result={num1 + num2} ")

elif op == "-":
    print(f"{num1} - {num2}")
    print(f"Result={num1 - num2} ")

elif op == "*":
    print(f"{num1} * {num2}")
    print(f"Result={num1 * num2} ")

elif op == "*":
    print(f"{num1} / {num2}")
    print(f"Result={num1 / num2} ")

else:
    print("Error! Division by zero.")
