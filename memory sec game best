# MEMORY SEQUENCE GAME ðŸŽ® --->>>

import random
import time
import os

def clear_screen():
    """Clear the terminal screen."""
    os.system("cls" if os.name == "nt" else "clear")

print("\n=== ðŸ§  MEMORY SEQUENCE GAME ðŸ§  ===")
print("Remember the sequence and type it back! ")
print("\nRules: ")
print("- Watch as numbers appear one by one ")
print("- After the sequence is shown, type it back in order")
print("- Each round adds one more number to remember")
print("- How far can you go? ðŸ†\n")

input("Press Enter to start....")

seq = []
current_round = 1
game_over = False

while not game_over:
    seq.append(random.randint(1, 9))

    clear_screen()
    print(f"\n=== Round {current_round} ===")
    print(f"Remember this sequence of {len(seq)} numbers:")

    for number in seq:
        print(f"\n{number}")
        time.sleep(0.7)
        clear_screen()

    print('\nNow repeat the sequence by typing each number, separated by spaces: ')
    player_ans = input("> ")

    try:
        player_seq = [int(num) for num in player_ans.strip().split()]
    except ValueError:
        print("Please enter numbers only!")
        game_over = True
        continue

    if player_seq == seq:
        print(f"ðŸŽ‰ Congrats! You remembered all {len(seq)} numbers!")
        current_round += 1
        time.sleep(2)
    else:
        print(f"ðŸ˜­ Game over! You remembered {current_round - 1} numbers!")
        print("The correct sequence was:", " ".join(str(num) for num in seq))
        game_over = True  # Fix: Mark game as over if wrong

    if game_over:
        play_again = input("\nPlay again? (yes/no): ").lower()
        if play_again.startswith("y"):
            seq = []
            current_round = 1
            game_over = False
        else:
            print("Thanks for playing! ðŸŽ‰")
