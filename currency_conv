# --------------------------------------CURRENCY CONVERSETION ------------------------------------------------
def usd_to_tk():
    us = float(input("Enter the amount in USD: "))
    tk = us * 90
    print(f"{us} USD = {tk:.2f} Taka ğŸ’µâ¡ï¸ğŸ’°")


def tk_to_usd():
    tk = float(input("Enter the amount in TAKA: "))
    us = tk / 90
    print(f"{tk} TAKA = {us:.2f} USD ğŸ’µâ¡ï¸ğŸ’°")
def euro_to_tk():
    euro = float(input("Enter the amount in EURO: "))
    tk = euro * 118
    print(f"{euro} 'EURO =' {tk:.2f} TAKA ğŸ’µâ¡ï¸ğŸ’°")

def tk_to_euro():
    tk = float(input("Enter the amount in TAKA: "))
    euro = tk / 118
    print(f"{tk} 'TAKA =' {euro:.2f} EURO ğŸ’µâ¡ï¸ğŸ’°")

def euro_to_usd():
    euro = float(input("Enter the amount in EURO: "))
    us= euro * 1.08
    print(f"{euro:.2f} EUR = {us:.2f} USD ğŸ’¶â¡ï¸ğŸ’µ")

user = input("USD to Taka ğŸ’µâ¡ï¸ğŸ’° (Type 'u')\nTaka to USD ğŸ’°â¡ï¸ğŸ’µ (Type 'd')\nEuro to Taka ğŸ’¶â¡ï¸ğŸ’° (Type 't')\nTaka to Euro ğŸ’°â¡ï¸ğŸ’¶ (Type 'r')\nEuro to USD ğŸ’¶â¡ï¸ğŸ’µ (Type 'e')\nUSD to Euro ğŸ’µâ¡ï¸ğŸ’¶ (Type 'e4')\nWhat currency do you want to convert? : ").lower()

if user == "u":
    print("You chose to convert USD to Taka ğŸ’µâ¡ï¸ğŸ’°.")
    usd_to_tk()
elif user == "d":
    tk_to_usd()
elif user == "t":
    euro_to_tk()
elif user == "r":
    tk_to_euro()
elif user == "e":
    euro_to_usd()
else:
    print("Not availeval")
